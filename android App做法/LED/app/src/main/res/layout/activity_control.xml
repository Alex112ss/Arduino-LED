<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ControlActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED 控制"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/buttonOn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="打開 LED"
        android:layout_below="@id/textTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonOff"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="關閉 LED"
        android:layout_below="@id/buttonOn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonBrighter"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="亮一點"
        android:layout_below="@id/buttonOff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonDimmer"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="暗一點"
        android:layout_below="@id/buttonBrighter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textBrightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="當前亮度：128"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonDimmer"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登出"
        android:layout_below="@id/textBrightness"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
